{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "typedocOptions": {
    "out": "docs",
    "entryPoint": "src/index.ts",
    "exclude": ["**/*.test.ts", "src/data/**"],
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true,
    "excludeExternals": true,
    "externalPattern": "foobar",
    "theme": "minimal"
  }
}
