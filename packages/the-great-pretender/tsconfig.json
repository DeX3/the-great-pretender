{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "typedocOptions": {
    "out": "docs",
    "exclude": "**/*.test.ts",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true,
    "excludeExternals": true
  }
}
